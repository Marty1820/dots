(defwidget cal []
  (box :class "cal-box"
    :orientation "v"
    (calendar :class "cal")
  )
)

(defwindow calendar
  :namespace "eww-calendar"
  :monitor 0
  :geometry (geometry
              :x "4px"
              :y "4px"
              :anchor "top left")
  :stacking "fg"
  (revealer :transition "slidedown"
    :reveal calendar
    (cal)
  )
)
